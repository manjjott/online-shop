<%- include('../../base/includes/head', { pageTitle: 'Add new Products' }) %>
  <link rel="stylesheet" href="/styles/form.css">
  <link rel="stylesheet" href="/styles/auth.css">
  <script src="/scripts/image-preview.js" defer></script>
</head>
<body>
  <%- include('../../base/includes/header') %>
  <main>
    <h1>
        Add new product
    </h1>


    <form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
        <p>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" required>
        </p>

        <div id="image-upload-control">
            <p>
            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="image/png,image/jpg" required>

        </p>

        <img src="" alt="selected image">

    </div>

        <p>
            <label for="summary">Summary</label>
            <input type="text" id="summary" name="summary" required maxlength="250">
        </p>


        <p>
            <label for="price">Price</label>
            <input type="number" id="price" name="price" required min="0.01" step="0.01">
        </p>

        <p>
            <label for="description">Description</label>
            <textarea name="description" id="description" rows="10" required></textarea>
        </p>


        <p>
            <button type="reset" class="btn-alt">Reset</button>
            <button type="submit" class="btn">Submit</button>
        </p>
    </form>


  </main>
<%- include('../../base/includes/footer') %>